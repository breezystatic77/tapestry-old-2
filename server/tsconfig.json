{
	"include": ["src/**/*.ts", "./global.d.ts"],
	"exclude": ["src/**/*.spec.ts"],
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"target": "es5",
		"typeRoots": ["./node_modules/@types", "./global.d.ts"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true
	}
}
